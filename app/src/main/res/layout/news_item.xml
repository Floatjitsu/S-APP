<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgColor"
    android:padding="8dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:text="@string/news_title"/>

    <TextView
        android:id="@+id/news_provider_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/news_provider_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/news_image"
        android:src="@drawable/ic_photo_white_24dp"/>

    <TextView
        android:id="@+id/news_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_provider_name"
        app:layout_constraintLeft_toRightOf="@id/news_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:gravity="fill"
        android:layout_marginStart="10dp"
        android:text="@string/news_description" />
<!--
    <TextView
        android:id="@+id/news_url"
